// GFG Link - https://www.geeksforgeeks.org/problems/count-leaves-in-binary-tree/1?utm=codolio


class Solution {
  public:
    // Function to count the number of leaf nodes in a binary tree.
    
    int solve(Node* root) {
        if(root == NULL) return 0;
        
        // agar node ka left or right child nhi hai tab node leaf node hoga
        if(root->left == NULL && root->right == NULL) {
            return 1;
        }
        
        return solve(root->left) + solve(root->right);
    }
    
    int countLeaves(Node* root) {
        
        return solve(root);
    }
};
